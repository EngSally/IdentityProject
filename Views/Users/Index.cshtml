@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>

<a class="btn btn-primary" asp-action="Add" >Add New User</a>
<table  class="table table-striped mt-4" >
    <thead>
        <tr class="bg-primary text-white" >
           
            <th> Frist Name </th>
            <th> Last Name</th>
            <th> UserName</th>
            <th> Email</th>
            <th> Roles</th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
              
                <td>@user.FristName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(',',user.Roles)</td>
                <td>
                    <a  class="btn btn-primary" asp-action="MangeRole" asp-route-userId=@user.Id> Roles</a>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-userId=@user.Id>Edit </a>
                    <a class="btn btn-danger   js-delete"   data-id="@user.Id" >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>

        $('body').delegate('.js-delete', 'click', function () {
            var btn = $(this)
            bootbox.confirm({
                message: 'Are You Sure You Want To Delete User?',
                buttons: {
                    confirm: {
                        label: 'Yes',
                        className: 'btn btn-primary'
                    },
                    cancel: {
                        label: 'No',
                        className: 'btn-danger'
                    }
                },

                callback: function (result) {

                    if (result) {
                        $.ajax({
                            url: '/api/users?userId=' + btn.data('id'),
                            method:'DELETE',
                            
                            success: function (data) {
                                btn.parents('tr').fadeOut();
                                alert('success');
                                console.log(data);
                            },
                            error: function (data) {
                                alert('Error');
                                console.log(data);
                            }

                        });
                    }
                    ///////////////////////////


                }
            });













        });
       
    </script>


}