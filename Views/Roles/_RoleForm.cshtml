@model RoleFromViewModel

<form asp-action="@(Model?.Id ==string.Empty ?  "Create":"Edit" )"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-success="OnmodelSuccess"
      data-ajax-failure="OnmodelError">
    <div class="mb-5">
        @if (Model?.Id != string.Empty)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Name" asp-for="Name"  />
            <label asp-for="Name"></label>
        </div>
        <span asp-validation-for="Name" class="text-danger d-block"></span>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
<script>
    function OnmodelSuccess(row) {
        console.log('Success');
        console.log(row);
        $('tbody').prepend(row);
        $('#exampleModal').modal('hide');
       

    }
    function OnmodelError(row) {
        console.log('Error');
        console.log(row);
    }
</script>